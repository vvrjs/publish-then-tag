{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "editor.detectIndentation": false,
  "editor.tabSize": 4,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "typescript",
    "javascript"
  ],
  "files.exclude": {
    "**/.git": true,
    "node_modules": true,
    "package-lock.json": true
  }
}