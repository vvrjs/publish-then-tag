{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "target": "esnext",
    "noResolve": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "lib": [
      "es2017",
    ],
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts"
  ]
}